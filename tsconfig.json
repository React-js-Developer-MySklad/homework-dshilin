{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src": ["src/*"],
      "@components": ["src/app/components/*"],
      "@utils": ["src/utils/*"],
      "@assets": ["src/assets/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "esnext",
    "sourceMap": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  }
}